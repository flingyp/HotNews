{
  "publisher": "flingyp",
  "name": "vscode-plugin-hot-news",
  "displayName": "HotNews",
  "version": "0.0.11",
  "packageManager": "pnpm@8.6.0",
  "description": "A plugin to browse hot content for platforms in VSCode",
  "author": "FlingYP <flingyp@163.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/flingyp",
  "homepage": "https://github.com/flingyp/HotNews#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/flingyp/HotNews"
  },
  "bugs": {
    "url": "https://github.com/flingyp/HotNews/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/flingyp"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "assets/logo.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.78.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "WeiBoHotNews.refresh",
        "title": "Refresh",
        "icon": {
          "light": "./assets/refresh-black.svg",
          "dark": "./assets/refresh-white.svg"
        }
      },
      {
        "command": "ZhiHuNews.refresh",
        "title": "Refresh",
        "icon": {
          "light": "./assets/refresh-black.svg",
          "dark": "./assets/refresh-white.svg"
        }
      },
      {
        "command": "JueJinNews.refresh",
        "title": "Refresh",
        "icon": {
          "light": "./assets/refresh-black.svg",
          "dark": "./assets/refresh-white.svg"
        }
      },
      {
        "command": "BaiDuNews.refresh",
        "title": "Refresh",
        "icon": {
          "light": "./assets/refresh-black.svg",
          "dark": "./assets/refresh-white.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "WeiBoHotNews.refresh",
          "when": "view == HotNews-WeiBo",
          "group": "navigation"
        },
        {
          "command": "ZhiHuNews.refresh",
          "when": "view == HotNews-ZhiHu",
          "group": "navigation"
        },
        {
          "command": "JueJinNews.refresh",
          "when": "view == HotNews-JueJin",
          "group": "navigation"
        },
        {
          "command": "BaiDuNews.refresh",
          "when": "view == HotNews-BaiDu",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "HotNews": [
        {
          "id": "HotNews-WeiBo",
          "name": "微博热搜"
        },
        {
          "id": "HotNews-ZhiHu",
          "name": "知乎热榜"
        },
        {
          "id": "HotNews-BaiDu",
          "name": "百度热搜"
        },
        {
          "id": "HotNews-JueJin",
          "name": "掘金热榜"
        },
        {
          "id": "HotNews-DouYin",
          "name": "抖音热搜榜"
        },
        {
          "id": "HotNews-TouTiao",
          "name": "今日头条热搜榜"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "HotNews",
          "title": "HotNews",
          "icon": "/assets/logo.png"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@antfu/ni": "^0.21.3",
    "@types/node": "^18.16.16",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.78.1",
    "@vscode/vsce": "^2.19.0",
    "bumpp": "^9.1.0",
    "cheerio": "1.0.0-rc.12",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "node-fetch": "2.6.12",
    "pnpm": "^8.6.0",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vite": "^4.2.3"
  }
}
