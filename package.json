{
  "publisher": "flingyp",
  "name": "vscode-plugin-hot-news",
  "displayName": "HotNews",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "description": "The first time to grasp the hot news",
  "author": "FlingYP <flingyp@163.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/flingyp",
  "homepage": "https://github.com/flingyp/HotNews#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/flingyp/HotNews"
  },
  "bugs": {
    "url": "https://github.com/flingyp/HotNews/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/flingyp"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.78.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "views": {
      "HotNews": [
        {
          "id": "HotNews-WeiBo",
          "name": "微博热搜"
        },
        {
          "id": "HotNews-ZhiHu",
          "name": "知乎热搜"
        },
        {
          "id": "HotNews-BaiDu",
          "name": "百度热搜"
        },
        {
          "id": "HotNews-JueJin",
          "name": "掘金文章"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "HotNews",
          "title": "HotNews",
          "icon": "/assets/logo.png"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@antfu/ni": "^0.21.3",
    "@types/node": "^18.16.16",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.78.1",
    "@vscode/vsce": "^2.19.0",
    "bumpp": "^9.1.0",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "pnpm": "^8.6.0",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vite": "^4.2.3"
  },
  "dependencies": {
    "node-fetch": "2.6.12"
  }
}
